void __fastcall TForm3::N5Click(TObject *Sender)
{
if (SaveDialog1->Execute())
{
	UnicodeString a = ExtractFilePath(Application->ExeName)+"DB.mdb";
	CopyFile(a.t_str(), SaveDialog1->FileName.t_str(), false);
}
}
