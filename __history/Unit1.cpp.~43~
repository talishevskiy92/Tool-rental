void __fastcall TForm1::Edit4Change(TObject *Sender)
{
	if(Edit2->Text != "" && Edit3->Text != "" && Edit4->Text != "" && Edit5->Text != ""){
		BitBtn6->Enabled = true;
	}
	else{
		BitBtn6->Enabled = false;
	}

}
